@page "{itemId:int}"
@model Auction_System.Pages.Buyer.Feedback.CreateModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Leave Feedback for Item #@Model.ItemId</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Feedback.ItemId" />
                <input type="hidden" asp-for="Feedback.BuyerId" />
                <input type="hidden" asp-for="Feedback.SellerId" />
                <input type="hidden" asp-for="Feedback.FeedbackDate" />

                <div class="form-group mb-3">
                    <label asp-for="Feedback.Rating" class="form-label">Rating*</label>
                    <select asp-for="Feedback.Rating" class="form-control" required>
                        <option value="">Select a rating (1-5)</option>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <option value="@i">@i Star@(i > 1 ? "s" : "")</option>
                        }
                    </select>
                    <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Feedback.Comment" class="form-label">Comments</label>
                    <textarea asp-for="Feedback.Comment" class="form-control" rows="4"
                              placeholder="Share your experience with this item and seller..."></textarea>
                    <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-page="../Details" asp-route-id="@Model.ItemId" class="btn btn-secondary me-md-2">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Submit Feedback
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>