@page
@model Auction_System.Pages.Shared.Seller.CreateModel




<h4> Create Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.Title" class="control-label"></label>
                <input asp-for="Item.Title" class="form-control" />
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.StartingPrice" class="control-label"></label>
                <input asp-for="Item.StartingPrice" class="form-control" />
                <span asp-validation-for="Item.StartingPrice" class="text-danger"></span>
            </div>
          
    
            <div class="form-group">
                <label asp-for="Item.ImagePath" class="control-label"></label>
                <input type="file" name="ImageFile" />
               
            </div>
            <div class="form-group">
                <label asp-for="Item.CategoryId">Category</label>
                <select asp-for="Item.CategoryId" asp-items="Model.Categories" class="form-control">
                    <option value="">-- Select a Category --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Item.StartingTime" class="control-label"></label>
                <input asp-for="Item.StartingTime" type="datetime-local" class="form-control" type="time" />
                <span asp-validation-for="Item.StartingTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Item.EndingTime" class="control-label"></label>
                <input asp-for="Item.EndingTime" type="datetime-local" class="form-control" type="time" />
                <span asp-validation-for="Item.EndingTime" class="text-danger"></span>
            </div>
         

            <div class="form-group">
                <label asp-for="Item.AuctionDate" class="control-label"></label>
                <input asp-for="Item.AuctionDate" class="form-control" type="date" />
                <span asp-validation-for="Item.AuctionDate" class="text-danger"></span>
            </div>
    

          

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
