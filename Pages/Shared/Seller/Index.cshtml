@model Auction_System.Pages.Shared.Seller.IndexModel

@{
    ViewData["Title"] = "My Items";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">My Items</h2>
        <a class="btn btn-success" asp-page="Create">+ Create New Item</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Starting Price</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-light">
                @foreach (var item in Model.Item)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td class="text-center">
                            <img src="@item.ImagePath" alt="Image" class="img-thumbnail" style="max-width: 100px; max-height: 80px;" />
                        </td>
                        <td>@item.Category?.CategoryName</td>
                        <td>@item.Description</td>
                        <td>@item.StartingPrice.ToString("C")</td>
                        <td>@item.StartingTime.ToShortTimeString()</td>
                        <td>@item.EndingTime.ToShortTimeString()</td>
                        <td>@item.AuctionDate.ToShortDateString()</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-primary me-1" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-info me-1" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
