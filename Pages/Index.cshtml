@{
    ViewData["Title"] = "University Auction System";
}

<!-- Hero Section -->
<div class="container-fluid bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 mb-4">🎓 Welcome to Campus Marketplace!</h1>
        <p class="lead mb-4">
            The official auction platform for university students to buy, sell, and trade campus essentials
        </p>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-3 col-md-6">
                <div class="h-100 p-4 bg-white text-dark rounded-3">
                    <i class="bi bi-book fs-1 text-primary"></i>
                    <h3 class="my-3">Textbooks</h3>
                    <p>Buy & sell used course materials at student-friendly prices</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="h-100 p-4 bg-white text-dark rounded-3">
                    <i class="bi bi-laptop fs-1 text-primary"></i>
                    <h3 class="my-3">Electronics</h3>
                    <p>Find affordable laptops, gadgets, and tech accessories</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="h-100 p-4 bg-white text-dark rounded-3">
                    <i class="bi bi-bicycle fs-1 text-primary"></i>
                    <h3 class="my-3">Campus Gear</h3>
                    <p>Bikes, furniture, and everything for dorm life</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="container py-5">
    <h2 class="text-center mb-5">Student-Friendly Features</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0">
                <div class="card-body text-center">
                    <i class="bi bi-patch-check fs-1 text-success"></i>
                    <h5 class="card-title mt-3">Verified .edu Accounts</h5>
                    <p class="card-text">Secure trading with university-verified student accounts</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin fs-1 text-warning"></i>
                    <h5 class="card-title mt-3">Campus Pickup</h5>
                    <p class="card-text">Meet safely on campus for item exchange</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0">
                <div class="card-body text-center">
                    <i class="bi bi-shield-lock fs-1 text-info"></i>
                    <h5 class="card-title mt-3">Secure Payments</h5>
                    <p class="card-text">Escrow system protects both buyers and sellers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
        <h3 class="mb-4">Ready to Start Trading?</h3>
        <a href="/Buyer/ViewItems" class="btn btn-lg btn-primary me-3">
            <i class="bi bi-search"></i> Browse Listings
        </a>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-outline-secondary">
            <i class="bi bi-person-plus"></i> Create Student Account
        </a>
    </div>
</div>
 