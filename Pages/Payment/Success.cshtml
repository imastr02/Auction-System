@page
@model Auction_System.Pages.Payment.SuccessModel
@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container text-center">
    <div class="success-icon mb-4">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
    </div>

    <h2>Payment Successful!</h2>
    <p class="lead">₹@Model.Item.EndingPrice.ToString("N2") paid for @Model.Item.Title</p>

    <div class="seller-info card mt-4">
        <div class="card-body">
            <h5 class="card-title">Contact Seller</h5>
            <p class="card-text">
                Seller: @Model.Item.Seller.UserName<br>
                Email: @Model.Item.Seller.Email<br>
                Your Contact: @Model.PhoneNumber
            </p>
            <a href="/Buyer/Inbox" class="btn btn-success">
                Return to Inbox
            </a>
        </div>
    </div>
</div>