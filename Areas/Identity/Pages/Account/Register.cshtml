
@page
@model RegisterModel
@{
    ViewData["Title"] = "Create an Account";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="register-wrapper">
    <!-- Left Image Section -->
    <div class="image-side">
        <img src="~/images/AuctionBgImage02.jpg" alt="Auction" />
        @* <div class="image-overlay">
            <h2>Rare Finds, Incredible Prices</h2>
        </div> *@
    </div>

    <!-- Right Form Section -->
    <div class="form-side">
        <div class="form-card">
            <h2>Create an Account</h2>
            <p>Already have an account? <a asp-page="./Login">Log in</a></p>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="input-row">
                    <input asp-for="Input.FirstName" placeholder="First Name" required />
                    <input asp-for="Input.LastName" placeholder="Last Name" required />
                </div>

                <div class="input-row">
                    <input asp-for="Input.AdmissionNumber"
                           placeholder="Admission Number (COM/001/21)"
                           pattern="[A-Z]{3}/\d{3}/\d{2}"
                           title="Format: COM/001/21"
                           required />
                </div>

                <div class="input-row">
                    <input asp-for="Input.PhoneNumber" placeholder="Phone Number" required />
                    <input asp-for="Input.City" placeholder="City" required />
                </div>

                <input asp-for="Input.Email" placeholder="Email" required />
                <input asp-for="Input.Password" type="password" placeholder="Enter your password" required />
                <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password" required />

                <div class="select-role">
                    <label asp-for="Input.Role">Choose Role</label>
                    <select asp-for="Input.Role">
                        <option value="Buyer">Buyer</option>
                        <option value="Seller">Seller</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <button type="submit" class="submit-btn">Create Account</button>
            </form>
        </div>
    </div>
</div>
