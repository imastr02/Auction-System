                </div>

                <div class="input-row">
                    <input asp-for="Input.PhoneNumber" placeholder="Phone Number" required />
                    <input asp-for="Input.City" placeholder="City" required />
                </div>

                <input asp-for="Input.Email" placeholder="Email" required />
                <input asp-for="Input.Password" type="password" placeholder="Enter your password" required />
                <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password" required />

                <div class="select-role">
                    <label asp-for="Input.Role">Choose Role</label>
                    <select asp-for="Input.Role">
                        <option value="Buyer">Buyer</option>
                        <option value="Seller">Seller</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <button type="submit" class="submit-btn">Create Account</button>
            </form>
        </div>
    </div>
</div>
