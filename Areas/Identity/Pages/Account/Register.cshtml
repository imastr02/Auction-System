@page
@model RegisterModel
@{
    ViewData["Title"] = "Create an Account";
}

<div class="register-container">
    <div class="image-section">
        <img src="~/images/AuctionBgImage02.jpg" alt="h" />
        <div class="overlay-text">
            <h2>Rare Finds, Incredible Prices</h2>
        </div>
    </div>

    <div class="form-section">
        <h2>Create an account</h2>
        <p>Already have an account? <a asp-page="./Login">Log in</a></p>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <input asp-for="Input.FirstName" placeholder="First Name" required />
                <input asp-for="Input.LastName" placeholder="Last Name" required />
            </div>

            <div class="form-group">
                <input asp-for="Input.PhoneNumber" placeholder="Phone Number" required />
                <input asp-for="Input.City" placeholder="City" required />
            </div>

            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Email" required />
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Enter your password" type="password" required />
            </div>

            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" placeholder="Confirm your password" type="password" required />
            </div>

            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" class="form-control">
                    <option value="Buyer">Buyer</option>
                    <option value="Seller">Seller</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

           @*  <div class="form-group terms">
                <input type="checkbox" required />
                <label>I agree to the <a href="#">Terms & Conditions</a></label>
            </div> *@

            <button type="submit" class="btn-primary">Create account</button>

           @*  <div class="divider">or register with</div>

            <div class="social-buttons">
                <button type="button" class="btn-google">Google</button>
                <button type="button" class="btn-apple">Apple</button>
            </div> *@
        </form>
    </div>
</div>
