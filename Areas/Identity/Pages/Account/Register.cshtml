@page
@model RegisterModel
@{
    ViewData["Title"] = "Create an Account";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
        }

        .register-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            min-height: 100vh;
        }

        .image-section {
            position: relative;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('../images/AuctionBgImage02.jpg') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .overlay-text {
            color: white;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

            .overlay-text h2 {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

        .form-section {
            padding: 4rem 2rem;
            background: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .form-section h2 {
                font-size: 2rem;
                margin-bottom: 1rem;
                color: var(--primary-color);
            }

            .form-section p {
                margin-bottom: 2rem;
                color: #666;
            }

            .form-section a {
                color: var(--secondary-color);
                text-decoration: none;
            }

        .form-group {
            margin-bottom: 1.5rem;
            display: grid;
            gap: 1rem;
        }

        input, select {
            width: 100%;
            padding: 1rem;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            input:focus, select:focus {
                border-color: var(--secondary-color);
                outline: none;
                box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
            }

        button[type="submit"] {
            background: var(--secondary-color);
            color: white;
            padding: 1rem 2rem;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

            button[type="submit"]:hover {
                background: #2980b9;
                transform: translateY(-2px);
            }

        .terms {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 1rem 0;
        }

        .divider {
            text-align: center;
            margin: 2rem 0;
            position: relative;
            color: #666;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #ddd;
                position: absolute;
                width: 45%;
                top: 50%;
            }

            .divider::before {
                left: 0;
            }

            .divider::after {
                right: 0;
            }

        @@media (max-width: 768px) {
            .register-container {
                grid-template-columns: 1fr;
            }

            .image-section {
                padding: 4rem 1rem;
                min-height: 300px;
            }

            .form-section {
                padding: 2rem 1rem;
            }
        }
    </style>
</head>

