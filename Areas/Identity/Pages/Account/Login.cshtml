@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="register-container">
    <div class="image-section">
        <img src="~/images/AuctionBgImage02.jpg" alt="h" />
        <div class="overlay-text">
            <h2>Rare Finds, Incredible Prices</h2>
        </div>
    </div>

    <div class="form-section">
        <h2>Log in</h2>
        <p>Don't have an account? <a asp-page="./Register">Create Account</a></p>

        <form method="post">

            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Email" required />
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Enter your password" type="password" required />
            </div>

            <button type="submit" class="btn-primary">Log in</button>
           
        </form>
    </div>
</div>
