 @page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5f8fc;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .left-section {
        flex: 1.5;
        position: relative;
        background-color: #f0f0f0;
    }

        .left-section img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.8);
        }

    .caption {
        position: absolute;
        bottom: 30px;
        left: 30px;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 1rem 1.5rem;
        border-radius: 10px;
        color: white;
    }

    .right-section {
        flex: 1;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-box {
        width: 100%;
        max-width: 350px;
        padding: 2rem;
        box-shadow: 0 0 10px rgba(0,0,0,0.08);
        border-radius: 12px;
        background-color: #ffffff;
    }

        .form-box h2 {
            margin-bottom: 10px;
            color: #333;
        }

        .form-box p {
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .form-box input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 0.95rem;
            background-color: #f9f9f9;
        }

        .form-box button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .form-box button:hover {
                background-color: #0056b3;
            }

        .form-box a {
            color: #007bff;
            text-decoration: none;
        }

</style>

<div class="login-container">
    <div class="left-section">
        <img src="~/images/AuctionBgImage02.jpg" alt="Auction Items" />
        <div class="caption">
            <h2>Rare Finds, Incredible Prices</h2>
        </div>
    </div>

    <div class="right-section">
        <div class="form-box">
            <h2>Welcome Back</h2>
            <p>Don't have an account? <a asp-page="./Register">Sign up</a></p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Input.Email" placeholder="Email" required />
                <input asp-for="Input.Password" type="password" placeholder="Password" required />

                <button type="submit">Log in</button>
            </form>
        </div>
    </div>
</div>
